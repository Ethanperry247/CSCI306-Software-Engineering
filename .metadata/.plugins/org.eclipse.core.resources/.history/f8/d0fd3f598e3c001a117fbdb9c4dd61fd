
public class Teacher extends Person {
	private String subjectTaught;

	public Teacher(String name, String occupation, String subjectTaught) {
		super(name, occupation);
		this.subjectTaught = subjectTaught;
	}
	

	@Override
	public String whatDoYouDo() {
		String response = this.whatDoYouDo();
		response += "\nI love to teach " + subjectTaught + "!";
		return response;
	}

	@Override
	public String askQuestion() {
		return "What is your favorite class?";
	}

	@Override
	public String answerQuestion() {
		return "Get back to your homework!";
	}

}
