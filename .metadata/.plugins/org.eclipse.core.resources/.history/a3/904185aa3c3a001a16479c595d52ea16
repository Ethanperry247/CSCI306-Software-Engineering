import java.util.Scanner;

/* 
 * The Station class will maintain data related to one station, 
 * specifically the name of the station (e.g., "Golden") and the 
 * list of detectives.
 */
public class Station {
	public final int MAX_DETECTIVES = 10;
	public static int badgeNumber = 0;
	private Detective[] detectives = new Detective[MAX_DETECTIVES];
	private String title;
	
	public Station(String title) {
		this.title = title;
	}
	
	public void hire() {
		if (badgeNumber < MAX_DETECTIVES) {
			Scanner input = new Scanner(System.in);
			System.out.print("New hire for " + title + "...Enter detective's name: ");
			String name = input.nextLine();
			Detective detective = new Detective(name, badgeNumber);
			detectives[badgeNumber] = detective;
			badgeNumber++;
		} else {
			System.out.println("Can't hire any more detectives for " + title);
		}
	}
	
	public void printDetectives() {
		System.out.println("List of Detectives for " + title);
		for (Detective detective: detectives) {
			if (detective != null) {
				System.out.println(detective);
			}
		}
		System.out.println();
		
	}
}
